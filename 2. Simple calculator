#include <stdio.h>

int main(void)
{
  double var1, var2, result;
  char character;

  printf("Calculator");
  printf("\nEnter a number: ");
  scanf("%lf", &var1);
  printf("\nEnter a character [+-*/]");
  scanf("%s", &character);
  printf("Enter a number: ");
  scanf("%lf", &var2);


switch(character)
{
  case '+': result = var1 + var2; break;
  case '-': result = var1 - var2; break;
  case '*': result = var1 * var2; break;
  case '/': result = var1 / var2; break;
}

printf("Result: %.2lf", result);

return 0;
}
